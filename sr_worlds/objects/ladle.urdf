<robot name="ladle">
  <link name="world"/>
  <joint name="ladle_joint" type="floating" >
    <parent link="world" />
    <child link="ladle_link" />
    <!-- initial pose of object in the parent frame coordinates -->
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>
  <link name="ladle_link">
    <inertial>
      <mass value="0.2" />
      <!-- center of mass (com) is defined w.r.t. link local coordinate system -->
      <origin xyz="0 0 0" /> 
      <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="1.0" />
    </inertial>
    <visual>
      <!-- visual origin is defined w.r.t. link local coordinate system -->
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
       <mesh filename="package://sr_worlds/meshes/ladle.mesh" scale="0.001 0.001 0.001" /> 
      </geometry>
    </visual>
    <collision>
      <!-- collision origin is defined w.r.t. link local coordinate system -->
      <origin xyz="0 0 0" rpy="0 0 0 " />
      <geometry>
	<mesh filename="package://sr_worlds/meshes/ladle.mesh" scale="0.001 0.001 0.001" />
      </geometry>
    </collision>
  </link>
  <gazebo reference="ladle_link">
    <material>Gazebo/Grey</material>
    <turnGravityOff>false</turnGravityOff>
  </gazebo>
</robot>
