<robot name="ladle">
  <link name="world"/>
  <joint name="ladle_joint" type="floating" >
    <parent link="world" />
    <child link="ladle_handle_link" />
    <!-- initial pose of object in the parent frame coordinates -->
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>
  <link name="ladle_handle_link">
    <inertial>
      <mass value="0.2" />
      <!-- center of mass (com) is defined w.r.t. link local coordinate system -->
      <origin xyz="0 0.01 -0.1" /> 
      <inertia  ixx=".0005" ixy="0.0"  ixz="0.0"  iyy=".003"  iyz="0.0"  izz=".0005" />
    </inertial>
    <visual>
      <!-- visual origin is defined w.r.t. link local coordinate system -->
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
       <mesh filename="package://sr_worlds/meshes/ladlehandlepart.mesh" scale="0.001 0.001 0.001" /> 
      </geometry>
    </visual>
    <collision>
      <!-- collision origin is defined w.r.t. link local coordinate system -->
      <origin xyz="0 0 0" rpy="0 0 0 " />
      <geometry>
	<mesh filename="package://sr_worlds/meshes/ladlehandlepart.mesh" scale="0.001 0.001 0.001" />
      </geometry>
    </collision>
  </link>
  <gazebo reference="ladle_handle_link">
    <material>Gazebo/Green</material>
    <turnGravityOff>false</turnGravityOff>
  </gazebo>
  <joint name="ladle_joint2" type="fixed" >
    <parent link="ladle_handle_link" />
    <child link="ladle_serving_link" />
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>
   <link name="ladle_serving_link">
    <inertial>
      <mass value="0.1" />
      <origin xyz="0 0.01 0.15" /> 
      <inertia  ixx="0.0005" ixy="0.0"  ixz="0.0"  iyy="0.003"  iyz="0.0"  izz="0.0005" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
       <mesh filename="package://sr_worlds/meshes/ladleservingpart.mesh" scale="0.001 0.001 0.001" /> 
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0 " />
      <geometry>
	<mesh filename="package://sr_worlds/meshes/ladleservingpart.mesh" scale="0.001 0.001 0.001" />
      </geometry>
    </collision>
  </link>
  <gazebo reference="ladle_serving_link">
    <material>Gazebo/Grey</material>
    <turnGravityOff>false</turnGravityOff>
  </gazebo>

</robot>
